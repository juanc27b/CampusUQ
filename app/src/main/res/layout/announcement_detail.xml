<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/announcement_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context="co.edu.uniquindio.campusuq.announcements.AnnouncementsActivity"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/announcement_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="9dp"
            app:columnCount="4">

            <ImageView
                android:id="@+id/announcement_image_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <ImageView
                android:id="@+id/announcement_image_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/announcement_image_description"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/announcement_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/announcement_sample_date"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/announcement_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/announcement_sample_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/announcement_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/announcement_sample_description"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/announcement_read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/mark_as_read"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/round_green_button"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/announcement_facebook_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_facebook"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/ic_facebook_description"/>

                <ImageView
                    android:id="@+id/announcement_twitter_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_twitter"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/ic_twitter_description"/>

                <ImageView
                    android:id="@+id/announcement_whatsapp_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_whatsapp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/ic_whatsapp_description"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>