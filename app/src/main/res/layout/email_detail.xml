<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quota_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context="co.edu.uniquindio.campusuq.util.EmailsAdapter"
    card_view:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/email_icon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/email_sample_icon_text"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_blue"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/email_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/email_sample_date"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/email_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_sample_from"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/email_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_sample_content"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
