<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.uniquindio.campusuq.activity.EmailsContentActivity">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp">
            <TextView
                android:id="@+id/content_email_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/content_email_sample_name"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/content_email_icon"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="@string/email_sample_icon_text"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/circle_blue"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/content_email_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_email_sample_from"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/content_email_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_email_sample_date"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <WebView
                android:id="@+id/content_email_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>
