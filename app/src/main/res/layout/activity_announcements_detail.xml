<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="co.edu.uniquindio.campusuq.activity.AnnouncementsDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/announcement_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/incident_detail_title"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/announcement_detail_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/incident_detail_name"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/announcement_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:inputType="text"
                android:maxLength="100"
                android:hint="@string/incident_detail_name_hint"/>

            <TextView
                android:id="@+id/announcement_detail_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/incident_detail_description"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/announcement_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLength="500"
                android:hint="@string/incident_detail_description_hint"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/announcement_detail_description_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/announcement_detail_sample_description_count"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/announcement_detail_description_count_separator"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/announcement_detail_description_count_limit"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/announcement_detail_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/incident_detail_image"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/announcement_detail_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rectangle_gray"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="@string/incident_detail_image_description"/>

            <Button
                android:id="@+id/announcement_detail_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/object_detail_ok"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>